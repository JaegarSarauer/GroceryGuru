<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Title">

    <Button
        android:text="Your Lists"
        android:layout_width="match_parent"
        android:id="@+id/listsButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_height="100dp"
        android:onClick="listsButtonClick" />

    <Button
        android:text="Add a Product"
        android:layout_width="match_parent"
        android:id="@+id/addProductButton"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_height="100dp"
        android:layout_above="@+id/listsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="addProductButtonClick" />

    <Button
        android:text="Your Products"
        android:layout_width="match_parent"
        android:id="@+id/productsButton"
        android:elevation="0dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_height="100dp"
        android:layout_above="@+id/addProductButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="productsButtonClick"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:srcCompat="@android:color/holo_blue_bright"
        android:id="@+id/imageView"
        android:layout_weight="0.53"
        android:layout_row="0"
        android:layout_column="0"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/productsButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
